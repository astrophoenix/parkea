<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amycorp.parkea.fragments.ReportarFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Facultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:paddingBottom="20dp"
            android:textSize="18sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_facultades"
            style="@style/spinner_style"
            android:popupBackground="@android:color/white"
            />

        <TextView
            android:text="Parqueo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingBottom="20dp"
            android:textSize="18sp"
            android:paddingTop="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_parqueaderos"
            style="@style/spinner_style"
            android:popupBackground="@android:color/white"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="# Parqueos Disponibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblOcupados"
                android:paddingBottom="20dp"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_parqueos_ocupados"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registrar"
            android:drawableLeft="@drawable/ic_save"
            android:layout_marginLeft="62dp"
            android:text="GUARDAR"
            android:layout_marginRight="62dp"
            android:background="@drawable/bordes_redondeados"
            android:layout_marginTop="22dp"
            android:textIsSelectable="false"
            android:scaleType="fitXY"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:cursorVisible="true" />

    </LinearLayout>

</FrameLayout>
